  selector: 'app-{{modulo}}-form',
  standalone: true,
  imports: [
    CommonModule,
    ReactiveFormsModule,
    RouterModule,
    ButtonModule,
    InputTextModule,
    TextareaModule,
    SelectModule,
    DatePickerModule,
    CardModule,
    ToastModule,
    InputNumberModule,
    FloatLabelModule,
  ],
  providers: [MessageService],
  template: `
    <p-toast />

    <div class="flex items-center gap-4 mb-6">
      <p-button
        icon="pi pi-arrow-left"
        [rounded]="true"
        [text]="true"
        severity="secondary"
        routerLink="/{{modulo}}"
      />
      <h2 class="m-0 text-color font-bold text-2xl">
        {{ isEdit() ? 'Editar {{EntidadeLabel}}' : 'Novo {{EntidadeLabel}}' }}
      </h2>
    </div>

    <div class="card">
      <form [formGroup]="form" (ngSubmit)="onSubmit()">
        <div class="grid grid-cols-12 gap-6">

          <!-- Campo texto obrigatório -->
          <div class="col-span-12 md:col-span-6 lg:col-span-4">
            <p-floatlabel variant="on">
              <input pInputText id="nome" formControlName="nome" class="w-full" />
              <label for="nome">Nome *</label>
            </p-floatlabel>
            @if (form.get('nome')?.hasError('required') && form.get('nome')?.touched) {
              <small class="text-red-500 mt-1 block">Nome é obrigatório</small>
            }
          </div>

          <!-- Campo select (enum) -->
          <!--
          <div class="col-span-12 md:col-span-6 lg:col-span-4">
            <p-floatlabel variant="on">
              <p-select
                id="tipo"
                formControlName="tipo"
                [options]="tipoOptions"
                optionLabel="label"
                optionValue="value"
                class="w-full"
              />
              <label for="tipo">Tipo *</label>
            </p-floatlabel>
          </div>
          -->

          <!-- Campo numérico -->
          <!--
          <div class="col-span-12 md:col-span-6 lg:col-span-4">
            <p-floatlabel variant="on">
              <p-inputnumber
                id="valor"
                formControlName="valor"
                mode="currency"
