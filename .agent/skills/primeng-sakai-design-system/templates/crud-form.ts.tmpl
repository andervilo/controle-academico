              />
              <label for="valor">Valor (R$)</label>
            </p-floatlabel>
          </div>
          -->

          <!-- Campo data -->
          <!--
          <div class="col-span-12 md:col-span-6 lg:col-span-4">
            <p-floatlabel variant="on">
              <p-datepicker
                id="data"
                formControlName="data"
                dateFormat="dd/mm/yy"
                [showIcon]="true"
                class="w-full"
              />
              <label for="data">Data</label>
            </p-floatlabel>
          </div>
          -->

          <!-- Select de relação (FK) — carregado via API -->
          <!--
          <div class="col-span-12 md:col-span-6 lg:col-span-4">
            <p-floatlabel variant="on">
              <p-select
                id="relacaoId"
                formControlName="relacaoId"
                [options]="relacoes()"
                optionLabel="label"
                optionValue="id"
                [filter]="true"
                filterBy="label"
                class="w-full"
              />
              <label for="relacaoId">Relação *</label>
            </p-floatlabel>
          </div>
          -->

          <!-- Observações (textarea full width) -->
          <div class="col-span-12">
            <p-floatlabel variant="on">
              <textarea
                pTextarea
                id="observacoes"
                formControlName="observacoes"
                rows="3"
                class="w-full"
              ></textarea>
              <label for="observacoes">Observações</label>
            </p-floatlabel>
          </div>
        </div>

        <!-- Ações -->
        <div class="flex gap-3 mt-6">
          <p-button
            [label]="isEdit() ? 'Salvar Alterações' : 'Cadastrar'"
            icon="pi pi-check"
            type="submit"
            [loading]="loading()"
            [disabled]="loading()"
          />
          <p-button
            label="Cancelar"
            icon="pi pi-times"
            severity="secondary"
            [outlined]="true"
            routerLink="/{{modulo}}"
          />
        </div>
      </form>
    </div>
  `,
})
export class {{Entidade}}FormComponent implements OnInit {
  private readonly fb = inject(FormBuilder);
  private readonly http = inject(HttpClient);
  private readonly router = inject(Router);
  private readonly route = inject(ActivatedRoute);
  private readonly messageService = inject(MessageService);

  private readonly API = `${environment.apiUrl}/{{recurso}}`;

  form!: FormGroup;
  isEdit = signal(false);
  loading = signal(false);
  recordId = signal<string | null>(null);

  // Opções de select (enums)
  // tipoOptions = [
  //   { label: 'Tipo A', value: 'TIPO_A' },
  //   { label: 'Tipo B', value: 'TIPO_B' },
  // ];

  // Dados de relação (FK) carregados via API
  // relacoes = signal<{ id: string; label: string }[]>([]);

  ngOnInit(): void {
    this.form = this.fb.group({
      nome: ['', Validators.required],
      // tipo: ['', Validators.required],
      // valor: [null],
      // data: [null],
      // relacaoId: ['', Validators.required],
      observacoes: [''],
    });

    // Carregar dados de relação:
    // this.loadRelacoes();

    const id = this.route.snapshot.paramMap.get('id');
    if (id) {
      this.isEdit.set(true);
      this.recordId.set(id);
      this.http.get<any>(`${this.API}/${id}`).subscribe({
        next: (data) => {
          this.form.patchValue({
            ...data,
            // Converter datas string para Date:
            // data: data.data ? new Date(data.data) : null,
          });
        },
      });
    }
  }

  // private loadRelacoes(): void {
  //   this.http.get<any>(`${environment.apiUrl}/outra-entidade?size=500`).subscribe({
  //     next: (res) => {
  //       this.relacoes.set(
  //         res.content.map((r: any) => ({ id: r.id, label: r.nome }))
  //       );
  //     },
  //   });
  // }

  onSubmit(): void {
    if (this.form.invalid) {
      this.form.markAllAsTouched();
      this.messageService.add({
        severity: 'warn',
        summary: 'Atenção',
        detail: 'Preencha os campos obrigatórios',
      });
      return;
    }

    this.loading.set(true);
    const data = { ...this.form.value };

    // Converter Date para string ISO:
    // if (data.data instanceof Date) {
    //   data.data = data.data.toISOString().split('T')[0];
    // }

    const req$ = this.isEdit()
      ? this.http.put(`${this.API}/${this.recordId()}`, data)
      : this.http.post(this.API, data);

    req$.subscribe({
      next: () => {
        this.messageService.add({
          severity: 'success',
          summary: 'Sucesso',
          detail: this.isEdit()
            ? '{{EntidadeLabel}} atualizado com sucesso'
            : '{{EntidadeLabel}} cadastrado com sucesso',
        });
        setTimeout(() => this.router.navigate(['/{{modulo}}']), 1000);
      },
      error: (err) => {
        this.loading.set(false);
        this.messageService.add({
          severity: 'error',
          summary: 'Erro',
          detail: err.error?.message || 'Erro ao salvar',
        });
      },
    });
  }
}
